										<Grid Margin="0">
											<Grid.ColumnDefinitions>
												<ColumnDefinition MinWidth="300" />
											</Grid.ColumnDefinitions>
											<Grid.RowDefinitions>
												<RowDefinition MinHeight="300" />
											</Grid.RowDefinitions>
											<ListBox Name="lbMLib" Margin="2" Background="WhiteSmoke">
												<ListBoxItem>Library is under construction...</ListBoxItem>
											</ListBox>
										</Grid>
									</TabPanel>
								</TabItem>
							</TabControl>
						</StackPanel>

						<StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Bottom">
							<Button Name="btnMOpen" Width="60" Height="60" Margin="5" ToolTip="Select folder to play" Click="btnMOpen_Click">
								<Image Source="/KitchenTouch;component/Resources/playereject.png" />
							</Button>

							<Button Name="btnMRadio1" Width="60" Height="60" Margin="5" FontSize="10" Click="btnMRadio_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Beige" FontWeight="Bold"></Button>
							<Button Name="btnMRadio2" Width="60" Height="60" Margin="5" FontSize="10" Click="btnMRadio_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="AliceBlue" FontWeight="Bold"></Button>
							<Button Name="btnMRadio3" Width="60" Height="60" Margin="5" FontSize="10" Click="btnMRadio_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Cornsilk" FontWeight="Bold"></Button>
							<Button Name="btnMRadio4" Width="60" Height="60" Margin="5" FontSize="10" Click="btnMRadio_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Gainsboro" FontWeight="Bold"></Button>
							<MediaElement Name="mediaElement" Height="60" Width="60" Margin="5" LoadedBehavior="Manual" UnloadedBehavior="Manual" Volume="1" />
						</StackPanel>

						<StackPanel Grid.Column="1">
							<Border Name="borderAlbumCover" Margin="10,5,10,0" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
								<Image Name="imgAlbumCover" Width="200" Height="200" Margin="20" Stretch="Uniform" StretchDirection="Both" VerticalAlignment="Center" HorizontalAlignment="Center" />
							</Border>
						</StackPanel>

						<StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
							<Label Name="lblMArtist" FontSize="12">Artist:</Label>
							<Label Name="lblMAlbum" FontSize="12">Album:</Label>
							<Label Name="lblMFile" FontSize="12">File:</Label>
							<StackPanel Orientation="Horizontal">
								<ProgressBar Name="pbarMPosition" Width="260"></ProgressBar>
								<Label Name="lblMPosition" Margin="10,0,0,0" FontSize="10">--:-- / --:--</Label>
							</StackPanel>
						</StackPanel>
						
						<StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
							<Button Name="btnMVolDn" Width="60" Height="60" Margin="5" ToolTip="Volume Down" Click="btnMVolDn_Click">
								<Image Source="/KitchenTouch;component/Resources/minus.png" />
							</Button>
							<Button Name="btnMVolUp" Width="60" Height="60" Margin="5" ToolTip="Volume Up" Click="btnMVolUp_Click">
								<Image Source="/KitchenTouch;component/Resources/plus.png" />
							</Button>
							<Button Name="btnMPrev"  Width="60" Height="60" Margin="5" ToolTip="Previous Song" Click="btnMPrev_Click">
								<Image Source="/KitchenTouch;component/Resources/playerprevious.png" />
							</Button>
							<Button Name="btnMPlay"  Width="60" Height="60" Margin="5" ToolTip="Play" Click="btnMPlay_Click">
								<Image Source="/KitchenTouch;component/Resources/playerplay.png" />
							</Button>
							<Button Name="btnMStop"  Width="60" Height="60" Margin="5" ToolTip="Pause" Click="btnMStop_Click">
								<Image Source="/KitchenTouch;component/Resources/playerstop.png" />
							</Button>
							<Button Name="btnMNext"  Width="60" Height="60" Margin="5" ToolTip="Next Song" Click="btnMNext_Click">
								<Image Source="/KitchenTouch;component/Resources/playernext.png" />
							</Button>
						</StackPanel>
					</Grid>
				</TabPanel>
			</TabItem>
			<TabItem Name="tabiSettings" Header="Settings" FontSize="16" MinWidth="80" MinHeight="60">
				<TabPanel Name="tabpSettings" Loaded="tabpSettings_Loaded" Unloaded="tabpSettings_Unloaded" SizeChanged="tabpSettings_SizeChanged">
					<Grid Margin="0">
						<ScrollViewer Name="svSettings" HorizontalAlignment="Left" MinWidth="800" VerticalScrollBarVisibility="Auto">
							<StackPanel HorizontalAlignment="Left" Margin="5" CanVerticallyScroll="True">
