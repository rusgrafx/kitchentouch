												<Label Margin="5" Width="150">WebCam #4 URL:</Label>
												<TextBox Name="tbWebCamBtn4URL" MinWidth="265" Margin="5"></TextBox>
											</StackPanel>
										</StackPanel>
									</GroupItem>
								</GroupBox>
								<GroupBox Header="Home/Pictures" Margin="0,20,0,0">
									<StackPanel>
