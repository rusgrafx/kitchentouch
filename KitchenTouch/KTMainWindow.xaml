<Window x:Class="KitchenTouch.KTMainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Welcome to Ulanov's Home" 
	ResizeMode="CanResize" WindowStyle="SingleBorderWindow"
	MinWidth="800" MinHeight="600" Width="1024" Height="768" Left="0" Top="0"
	Topmost="False" SnapsToDevicePixels="True" Visibility="Visible"
	TextBoxBase.SelectionChanged="fnTextEntryHandler" SizeChanged="Window_SizeChanged" WindowState="Maximized">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40" />
			<RowDefinition />
			<RowDefinition Height="30" />
		</Grid.RowDefinitions>

		<Label Margin="10,0,0,0" Name="lblCurrentDate" FontSize="24" FontFamily="Tahoma" Height="37.27" HorizontalAlignment="Left" Width="559.082">[TODAY'S DATE AND TIME]</Label>
		<Label Margin="0,0,10,0" Name="lblWelcome" FontSize="16" FontFamily="Georgia, Tahoma" Height="28.18" HorizontalAlignment="Right" MouseDoubleClick="lblWelcome_MouseDoubleClick">Welcome to ULANOV's family home</Label>
		
		<Button Name="btnPlayerCtrl" Grid.RowSpan="2" Width="60" Height="60" Margin="0,40,10,0" HorizontalAlignment="Right" Click="btnPlayerCtrl_Click" VerticalAlignment="Top">
			<Image Name="imgPlayerCtrl" Source="/KitchenTouch;component/Resources/playerplay.png" />
		</Button>

		<StatusBar Name="statusBar" Grid.Row="4" Height="30" VerticalAlignment="Bottom">
			<StatusBarItem Name="statusBarMain">Ready</StatusBarItem>
			<StatusBarItem Name="statusBarDebug" HorizontalAlignment="Right" HorizontalContentAlignment="Right">Debug messages disabled</StatusBarItem>
		</StatusBar>
		
		<TabControl Name="tabNavi" Grid.Row="1">
			<TabItem Name="tabHome" Header="Home" FontSize="16" MinWidth="80" MinHeight="60" IsSelected="True">
				<TabPanel Name="tabPHome" Loaded="tabPHome_Loaded" Unloaded="tabPHome_Unloaded">
					<Grid Margin="0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="254" />
							<ColumnDefinition />
							<ColumnDefinition Width="200" />
						</Grid.ColumnDefinitions>

						<StackPanel>
							<Label Margin="5" FontWeight="Bold">Current Home Status</Label>
							<Label Margin="5" FontWeight="Bold" FontSize="12">Lights:</Label>
							<Label Name="lblStatusLights" Margin="10,0,0,0">All lights are off</Label>
							<Label Margin="5" FontWeight="Bold" FontSize="12">Motion:</Label>
							<Label Name="lblStatusMotion" Margin="10,0,0,0" IsEnabled="False">No motion detected</Label>
							<Label Margin="5" FontWeight="Bold" FontSize="12">Alerts:</Label>
							<Label Name="lblStatusAlerts" Margin="10,0,0,0" IsEnabled="False">No recent alerts</Label>
							<Label Name="lblStatusResolution" Margin="5" FontWeight="Bold" FontSize="12">Window size: ---x---</Label>
						</StackPanel>
						
						<StackPanel Grid.Column="1" Margin="0" CanVerticallyScroll="False">
							<Border BorderBrush="Gray" BorderThickness="1" Margin="5" CornerRadius="5,5,5,5" Focusable="True" Padding="10">
								<Image Name="imgSlideShow" Stretch="Uniform" Margin="0" MinWidth="320" MinHeight="240" MouseDown="imgSlideShow_MouseDown" />
							</Border>
						</StackPanel>
						
						<StackPanel Grid.Column="2" Orientation="Vertical">
							<Button Name="btnHome" Margin="10,10,10,10" Height="60" Click="btnHome_Click">I'm home!</Button>
							<Button Name="btnAway" Margin="10,0,10,10" Height="60" Click="btnAway_Click">Good bye</Button>
							<Button Name="btnToggleSlideShow" Margin="10,60,10,10" Height="60" Click="btnToggleSlideShow_Click">Start slide show</Button>
							<StackPanel Orientation="Horizontal">
								<Button Name="btnSlideShowPrev" Margin="10" Width="80" Height="60" Click="btnSlideShowPrev_Click">
									<Image Source="/KitchenTouch;component/Resources/playerprevious.png" Stretch="Fill" />
								</Button>
								<Button Name="btnSlideShowNext" Margin="10" Width="80" Height="60" Click="btnSlideShowNext_Click">
									<Image Source="/KitchenTouch;component/Resources/playernext.png" Stretch="Fill" />
								</Button>
							</StackPanel>
						</StackPanel>
					</Grid>
				</TabPanel>
			</TabItem>
			<TabItem Name="tabCalendar" Header="Calendar" FontSize="16" MinWidth="80" MinHeight="60">
				<TabPanel Name="tabPCalendar">
					<Grid Margin="0">
						<Border BorderBrush="Gray" BorderThickness="0" Margin="0">
							<Frame Name="frameCalendar" MinWidth="620" MinHeight="480" Margin="0" Source="http://www.google.com/calendar/render?hl=en" />
						</Border>
					</Grid>
				</TabPanel>
			</TabItem>
			<TabItem Name="tabWeather" Header="Weather" FontSize="16" MinWidth="80" MinHeight="60">
