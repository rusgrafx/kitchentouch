						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="551*" />
							<ColumnDefinition Width="456" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="342.313" />
							<RowDefinition Height="174.687*" />
							<RowDefinition Height="70" />
						</Grid.RowDefinitions>

						<StackPanel Grid.RowSpan="2">
							<TabControl Name="tabcM" TabStripPlacement="Bottom" Margin="5">
								<TabItem Name="tabiMCurrent" Header="Now Playing" IsSelected="True">
									<TabPanel Name="tabpMCurrent" Loaded="tabpMCurrent_Loaded">
										<Grid Name="gridMCurrent" Margin="0" >
											<Grid.ColumnDefinitions>
												<ColumnDefinition MinWidth="300" />
											</Grid.ColumnDefinitions>
											<Grid.RowDefinitions>
												<RowDefinition MinHeight="300" />
