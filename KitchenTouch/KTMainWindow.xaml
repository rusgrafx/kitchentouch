					<Grid Margin="0">
<!--
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition Width="200" />
						</Grid.ColumnDefinitions>
-->						
						<Border BorderBrush="Gray" BorderThickness="0" Margin="5">
							<WebBrowser Name="frameWeather" MinWidth="640" MinHeight="480" Margin="0" />
						</Border>
<!--
						<StackPanel Grid.Column="2">
							<Button Name="goWeatherDefault" Margin="10" Height="60" Click="goWeatherDefault_Click">Home</Button>
							<Button Name="goWund" Margin="10" Height="60" Click="goWund_Click">Weather Undeground</Button>
							<Button Name="goWeather" Margin="10" Height="60" Click="goWeather_Click">Weather.com</Button>
						</StackPanel>
-->
					</Grid>
				</TabPanel>
			</TabItem>
			<TabItem Name="tabCameras" Header="Cameras" FontSize="16" MinWidth="80" MinHeight="60">
				<TabPanel Name="tabPCameras" Loaded="tabPCameras_Loaded" Unloaded="tabPCameras_Unloaded">
					<Grid Margin="0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition Width="200" />
						</Grid.ColumnDefinitions>

						<Border BorderBrush="Gray" BorderThickness="1" Margin="5">
							<WebBrowser Name="wbCam" Margin="0" />
						</Border>

						<StackPanel Grid.Column="1">
							<Label Name="lblCamName" Margin="10">[CURRENT CAMERA]</Label>
							<Button Name="btnWebCam1" Margin="10" Height="60" Click="btnWebCam_Click"></Button>
							<Button Name="btnWebCam2" Margin="10" Height="60" Click="btnWebCam_Click"></Button>
							<Button Name="btnWebCam3" Margin="10" Height="60" Click="btnWebCam_Click"></Button>
							<Button Name="btnWebCam4" Margin="10" Height="60" Click="btnWebCam_Click"></Button>
							<StackPanel Orientation="Horizontal">
								<CheckBox Name="cbWebCamRefresh" Margin="10" Unchecked="cbWebCamRefresh_Clicked" Checked="cbWebCamRefresh_Clicked"> Enable Refresh</CheckBox>
							</StackPanel>
						</StackPanel>
					</Grid>
				</TabPanel>
			</TabItem>
			<!--
			<TabItem Name="tabLights" Header="Lights" FontSize="16" MinWidth="80" MinHeight="60">
				<TabPanel Name="tabPLights">
					<Grid VerticalAlignment="Stretch" Margin="0" Width="1024" Height="598">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="1024*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="598*" />
						</Grid.RowDefinitions>
						<Label Name="lblLights">Lighting control</Label>
