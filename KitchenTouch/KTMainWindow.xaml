			<TabItem Name="tabBrowser" Header="Web" FontSize="16" MinWidth="80" MinHeight="60">
				<TabPanel Name="tabPBrowser" Loaded="tabPBrowser_Loaded" Unloaded="tabPBrowser_Unloaded">
					<Grid Margin="0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition Width="150" />
						</Grid.ColumnDefinitions>

						<Border BorderBrush="Gray" BorderThickness="1" Margin="5">
							<WebBrowser Name="iBrowser" Margin="0" />
						</Border>
						
						<StackPanel Grid.Column="1">
							<Button Name="btnGoWeb0"	Margin="5" Height="50" Width="50" Click="goWeb_Click">
								<Image Source="/KitchenTouch;component/Resources/home2.png" />
							</Button>
							<Button Name="btnGoWeb1"	Margin="5" Height="60" Click="goWeb_Click"></Button>
							<Button Name="btnGoWeb2"	Margin="5" Height="60" Click="goWeb_Click"></Button>
							<Button Name="btnGoWeb3"	Margin="5" Height="60" Click="goWeb_Click"></Button>
							<TextBox Name="txtUrl"		Margin="10,20,10,0" Height="30">http://ulanoff.com/</TextBox>
							<Button Name="btnGoTo"		Margin="5" Height="40" Click="btnGoTo_Click">Go</Button>
							<Button Name="goBack"		Margin="5" Height="40" Click="goBack_Click">Back</Button>
							<Button Name="btnBRefresh"	Margin="5" Height="40" Click="btnBRefresh_Click">Refresh</Button>
							<Button Name="btnBStop"		Margin="5" Height="40" Click="btnBStop_Click">Unload</Button>
						</StackPanel>
					</Grid>
				</TabPanel>
			</TabItem>
			<TabItem Name="tabMusic" Header="Music" FontSize="16" MinWidth="80" MinHeight="60">
